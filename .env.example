# Database - SQLite for Phase 1 (local desktop app)
DATABASE_URL="file:./apps/server/prisma/skill-builder.db"

# Claude API - AWS Bedrock (Primary)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
BEDROCK_MODEL_ID="anthropic.claude-3-5-sonnet-20241022-v2:0"

# Claude API - OpenRouter (Alternative)
OPENROUTER_API_KEY="your_openrouter_key"
OPENROUTER_MODEL="anthropic/claude-3.5-sonnet"

# App Config
NODE_ENV="development"
PORT=3000
API_PORT=3001

# Cloud API defaults (point to mock server during development)
BL1NK_API_BASE_URL="http://localhost:8081/v1"
BL1NK_WORKSPACE_ID="local-dev-workspace"
BL1NK_PROVIDER_ID="local-provider"

# Encryption Key (for API credential storage)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="your_32_byte_hex_key_here"
