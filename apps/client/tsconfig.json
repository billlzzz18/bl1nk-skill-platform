{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@claude-builder/shared": [
        "../../packages/shared/src"
      ],
      "@claude-builder/shared/*": [
        "../../packages/shared/src/*"
      ],
      "@claude-builder/server/*": [
        "../server/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/app/page.tsx",
    "src/app/layout.tsx",
    "src/app/settings/page.tsx",
    "src/trpc/client.ts",
    "src/trpc/provider.tsx",
    "src/stores/*.ts",
    "src/lib/utils.ts",
    "../server/src/routers/_app.ts",
    "../../packages/shared/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
